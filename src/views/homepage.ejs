    <header class="hero-section text-center text-light">
        <div class="container">
            <h1>Welcome to My Website</h1>
            <p class="lead">We provide the best services for web and app development.</p>
            <a href="#" class="btn btn-primary btn-lg">Get Started</a>
        </div>
    </header>

    <section class="features-section py-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-laptop feature-icon"></i>
                        <h3>Web Development</h3>
                        <p>We build responsive and modern websites.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-phone feature-icon"></i>
                        <h3>App Development</h3>
                        <p>We create user-friendly mobile applications.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-box">
                        <i class="bi bi-people feature-icon"></i>
                        <h3>Consulting</h3>
                        <p>We offer expert consulting services.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="user-management-section py-5">
        <div class="container">
            <h2 class="text-center">Manage Users</h2>
            <div id="message" class="alert" role="alert" style="display: none;"></div>
            <form id="userForm" class="mb-4" action="/api/users" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="city" class="form-label">City</label>
                    <input type="text" class="form-control" id="city" name="city" required>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            <ul id="userList" class="list-group">
                <!-- User items will be added here dynamically -->
            </ul>
        </div>
    </section>

    <footer class="footer-section text-center text-light py-4">
        <div class="container">
            <p>&copy; 2025 My Website. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('userForm').addEventListener('submit', async function (event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());

            const response = await fetch('/api/users', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                const user = await response.json();
                const userItem = document.createElement('li');
                userItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                userItem.innerHTML = `
                    <span>${user.name} (${user.email}, ${user.city})</span>
                    <button class="btn btn-danger btn-sm" onclick="deleteUser(this, '${user.id}')">Delete</button>
                `;

                document.getElementById('userList').appendChild(userItem);

                // Show success message
                showMessage('User added successfully!', 'success');

                // Clear the form
                document.getElementById('userForm').reset();
            } else {
                showMessage('Failed to add user!', 'danger');
            }
        });

        async function deleteUser(button, userId) {
            const response = await fetch(`/api/users/${userId}`, {
                method: 'DELETE'
            });

            if (response.ok) {
                const userItem = button.parentElement;
                document.getElementById('userList').removeChild(userItem);

                // Show delete message
                showMessage('User deleted successfully!', 'danger');
            } else {
                showMessage('Failed to delete user!', 'danger');
            }
        }

        function showMessage(message, type) {
            const messageDiv = document.getElementById('message');
            messageDiv.className = `alert alert-${type}`;
            messageDiv.textContent = message;
            messageDiv.style.display = 'block';

            setTimeout(() => { messageDiv.style.display = 'none'; }, 3000);
        }
    </script>
</body>

</html>